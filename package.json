{
  "name": "wales-coop-engagement-tool",
  "version": "1.0.0",
  "description": "Tool to help Wales Co-op deliver content to small businesses",
  "main": "index.js",
  "scripts": {
    "test": "nyc ava --verbose",
    "dev": "webpack-dev-server --content-base public/ --inline",
    "tdd": "nyc ava --verbose --watch --source ./src/**/**/*.js & webpack -d --watch & wait",
    "lint": "eslint .",
    "precommit": "npm run lint && npm t",
    "coverage": "nyc check-coverage --lines 95 --functions 95 --branches 95",
    "report": "nyc report --reporter=html",
    "start": "node server/index.js",
    "postinstall": "webpack --config ./webpack.config.babel.js --progress --colors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wales-coop/wales-coop.git"
  },
  "bugs": {
    "url": "https://github.com/wales-coop/wales-coop/issues"
  },
  "homepage": "https://github.com/wales-coop/wales-coop#readme",
  "babel": {
    "presets": [
      "latest",
      "stage-2"
    ],
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "ava": {
    "require": [
      "babel-core/register"
    ],
    "babel": "inherit"
  },
  "author": "Sam Galson and Mattia Spinelli",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-eslint": "^7.1.0",
    "bcrypt": "^1.0.0",
    "boom": "^4.2.0",
    "eslint": "^3.10.2",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "file-loader": "^0.9.0",
    "husky": "^0.11.9",
    "jsdom": "^9.8.3",
    "nyc": "^8.4.0",
    "sinon": "^1.17.6",
    "url-loader": "^0.5.7",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-polyfill": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-stage-2": "^6.17.0",
    "handlebars": "^4.0.6",
    "hapi": "^16.0.1",
    "inert": "^4.0.3",
    "joi": "^10.0.5",
    "materialize-css": "^0.97.8",
    "materialize-loader": "^1.1.1",
    "pg": "^6.1.0",
    "ramda": "^0.22.1",
    "webpack": "^1.13.3"
  },
  "engines": {
    "node": "6.2.2"
  }
}
